<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="250"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302assessment10b0101.controllers.CreateAccountController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create New Account" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Username:"/>
    <TextField fx:id="usernameField"/>

    <Label text="Password:"/>
    <PasswordField fx:id="passwordField"/>

    <Label text="Confirm Password:"/>
    <PasswordField fx:id="confirmPasswordField"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Create" onAction="#handleCreate"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>

    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox>
