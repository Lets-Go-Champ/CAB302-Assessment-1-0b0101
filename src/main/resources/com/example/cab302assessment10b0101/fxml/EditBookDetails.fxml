<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730" prefWidth="960" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302assessment10b0101.controllers.EditBookDetailsController" style="@../styles/manualEntry.css">
    <VBox prefHeight="730" prefWidth="960">
        <Label text="Edit Book Details">
            <font>
                <Font size="30.0"/>
            </font>
            <VBox.margin>
                <Insets left="40.0" top="20.0"/>
            </VBox.margin>
        </Label>
        <AnchorPane prefHeight="641.0" prefWidth="960.0">
            <VBox.margin>
                <Insets left="40.0"/>
            </VBox.margin>
            <ScrollPane hbarPolicy="NEVER" prefHeight="535.0" prefWidth="898.0" vbarPolicy="ALWAYS">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1115.0" prefWidth="911.0">
                    <VBox layoutY="14.0" prefHeight="639.0" prefWidth="394.0" AnchorPane.leftAnchor="0.0">
                        <Label text="Add to Collection">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <ChoiceBox fx:id="collectionChoiceBox" prefHeight="25.0" prefWidth="352.0"/>
                        <Label text="Title">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="titleTextField" prefHeight="25.0" prefWidth="355.0"/>
                        <Label text="ID/ISBN">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="isbnTextField" prefHeight="25.0" prefWidth="356.0"/>
                        <Label text="Author">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="authorTextField" prefHeight="25.0" prefWidth="358.0"/>
                        <Label text="Description">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="descriptionTextField" prefHeight="168.0" prefWidth="354.0"/>
                        <Label text="Publisher">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="publisherTextField" prefHeight="25.0" prefWidth="355.0"/>
                        <Label prefHeight="35.0" prefWidth="153.0" text="Publish Date">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dateDatePicker" editable="false" prefHeight="25.0" prefWidth="358.0"/>
                        <Label prefHeight="35.0" prefWidth="153.0" text="Pages">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="pagesTextField" prefHeight="25.0" prefWidth="355.0"/>
                        <Label layoutX="43.0" layoutY="854.0" text="Notes">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="notesTextField" layoutX="43.0" layoutY="889.0" prefHeight="168.0" prefWidth="362.0"/>
                        <Label layoutX="41.0" layoutY="1078.0" text="Cover Image">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                            <Button fx:id="addImageButton" layoutX="39.0" layoutY="1128.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="118.0"
                                    text="Add Image" textFill="#17cd26">
                                <font>
                                    <Font name="System Bold" size="18.0"/>
                                </font>
                            </Button>
                            <Button fx:id="updateBookButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="134.0"
                                    text="Update Book" textFill="#17cd26">
                                <font>
                                    <Font name="System Bold" size="18.0"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>
                </AnchorPane>
            </ScrollPane>
        </AnchorPane>
    </VBox>
</AnchorPane>
