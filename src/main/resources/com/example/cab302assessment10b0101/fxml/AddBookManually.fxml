<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10">
    <!-- Side Navigation -->
    <HBox>
        <VBox spacing="10" style="-fx-background-color: #D3D3D3;" prefWidth="150">
            <Button text="LOGO" style="-fx-background-color: #D3D3D3; -fx-font-size: 18px;" />
            <Button text="Collections" />
            <Button text="Add Collection" />
            <Button text="Books" />
            <Button text="Add Book" />
            <Button text="Lending" />
        </VBox>

        <Pane>
            <VBox spacing="20" padding="20" style="-fx-background-color: #F5F5F5;">
                <!-- Title -->
                <Label text="Add Book" style="-fx-font-size: 24px;" />

                <!-- TabPane for Search and Manual Entry -->
                <TabPane>
                    <Tab text="Search">
                        <!-- Add search-specific fields here -->
                    </Tab>
                    <Tab text="Manual Entry">
                        <!-- Manual Entry Form -->
                        <VBox spacing="10">
                            <!-- Add to Collection -->
                            <HBox spacing="10">
                                <Label text="Add to Collection" />
                                <ComboBox fx:id="collectionComboBox" prefWidth="150">
                                    <items>
                                    </items>
                                </ComboBox>
                            </HBox>
                            <!-- Title Field -->
                            <HBox spacing="10">
                                <Label text="Title" />
                                <TextField fx:id="titleTextField" prefWidth="300" />
                            </HBox>
                            <!-- ID/ISBN Field -->
                            <HBox spacing="10">
                                <Label text="ID / ISBN" />
                                <TextField fx:id="isbnTextField" prefWidth="300" />
                            </HBox>
                            <!-- Author Field -->
                            <HBox spacing="10">
                                <Label text="Author" />
                                <TextField fx:id="authorTextField" prefWidth="300" />
                            </HBox>
                        </VBox>
                    </Tab>
                </TabPane>
            </VBox>
        </Pane>
    </HBox>
</VBox>
