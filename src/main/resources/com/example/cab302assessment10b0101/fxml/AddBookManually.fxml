<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730" prefWidth="960" xmlns="http://javafx.com/javafx/17" stylesheets="@../styles/addBookManually.css" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302assessment10b0101.controllers.AddBookManuallyController">
    <VBox prefHeight="730" prefWidth="960">
        <Label text="Add Book">
           <font>
               <Font size="40.0"/>
           </font>
           <VBox.margin>
               <Insets left="40.0" top="20.0"/>
           </VBox.margin>
        </Label>
        <AnchorPane prefHeight="641.0" prefWidth="960.0">
            <TabPane prefHeight="730" prefWidth="960" tabMinWidth="125" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Search">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="636.0" prefWidth="839.0"/>
                </Tab>
                <Tab text="Manual Entry">
                    <ScrollPane hbarPolicy="NEVER" prefHeight="535.0" prefWidth="898.0" vbarPolicy="ALWAYS">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="800.0" prefWidth="911.0">
                            <VBox layoutY="14.0" prefHeight="639.0" prefWidth="394.0" AnchorPane.leftAnchor="20.0">

                                <Label text="Add to Collection" styleClass="manualAdd_labels"> </Label>
                                <ChoiceBox fx:id="collectionChoiceBox" prefHeight="25.0" prefWidth="352.0"/>
                                <Label text="Title" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="titleTextField" prefHeight="25.0" prefWidth="355.0"/>
                                <Label text="ID/ISBN" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="isbnTextField" prefHeight="25.0" prefWidth="356.0"/>
                                <Label text="Author" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="authorTextField" prefHeight="25.0" prefWidth="358.0"/>
                                <Label text="Description" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="descriptionTextField" prefHeight="168.0" prefWidth="354.0"/>
                                <Label text="Publisher" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="publisherTextField" prefHeight="25.0" prefWidth="355.0"/>
                                <Label prefHeight="35.0" prefWidth="200.0" text="Publish Date" styleClass="manualAdd_labels"> </Label>
                                <DatePicker fx:id="dateDatePicker" editable="false" prefHeight="25.0"
                                            prefWidth="358.0"/>
                                <Label prefHeight="35.0" prefWidth="153.0" text="Pages" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="pagesTextField" prefHeight="25.0" prefWidth="355.0"/>
                                <Label layoutX="43.0" layoutY="854.0" text="Notes" styleClass="manualAdd_labels"> </Label>
                                <TextField fx:id="notesTextField" layoutX="43.0" layoutY="889.0"
                                           prefHeight="168.0" prefWidth="362.0"/>
                                <Label text="Reading Status" styleClass="manualAdd_labels"> </Label>
                                <ChoiceBox fx:id="readingStatusChoiceBox" prefHeight="25.0" prefWidth="352.0"/>
                                <Label layoutX="41.0" layoutY="1078.0" text="Cover Image" styleClass="manualAdd_labels"> </Label>
                                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                                    <Button fx:id="addImageButton" layoutX="39.0" layoutY="1128.0"
                                            mnemonicParsing="false" prefHeight="39.0" prefWidth="118.0"
                                            text="Add Image" textFill="#17cd26">
                                    </Button>
                                    <Button fx:id="addBookButton" alignment="CENTER" mnemonicParsing="false"
                                            prefHeight="40.0" prefWidth="134.0" text="Add Book"
                                            textFill="#17cd26">
                                    </Button>
                                </HBox>
                            </VBox>
                        </AnchorPane>
                    </ScrollPane>
                </Tab>
            </TabPane>
        </AnchorPane>
    </VBox>
</AnchorPane>
