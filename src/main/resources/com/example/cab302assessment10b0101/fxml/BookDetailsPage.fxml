<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730" prefWidth="960" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302assessment10b0101.controllers.BookDetailsController">
        <VBox prefHeight="562.0" prefWidth="960.0" spacing="20" style="-fx-background-color: #F5F5F5;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <!-- Title -->
            <Label fx:id="titleLabel" style="-fx-font-size: 24px;" text="Book Title" />
            <HBox prefHeight="38.0" prefWidth="300.0" spacing="40.0">
                <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="91.0" text="Edit">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" prefHeight="3.0" prefWidth="102.0" text="Delete">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Book Details -->
            <HBox prefHeight="404.0" prefWidth="654.0" spacing="20">
                <!-- Cover Image -->
                <ImageView fx:id="bookCoverImage" fitHeight="404.0" fitWidth="271.0" preserveRatio="true" />

                <!-- Book Info -->
                <VBox alignment="TOP_CENTER" prefHeight="444.0" prefWidth="311.0" spacing="10">
                    <!-- Title -->
                    <HBox spacing="10">
                        <Label text="Title:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                        <Label fx:id="titleLabel" prefHeight="18.0" prefWidth="194.0" text="default title" />
                    </HBox>
                    <!-- Author -->
                    <HBox spacing="10">
                        <Label text="Author:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                        <Label fx:id="authorLabel" />
                    </HBox>
                    <!-- Publication Date -->
                    <HBox spacing="10">
                        <Label prefHeight="26.0" prefWidth="134.0" text="Publication Date:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                        <Label fx:id="publicationDateLabel" />
                    </HBox>
                    <!-- ISBN -->
                    <HBox spacing="10">
                        <Label prefHeight="26.0" prefWidth="45.0" text="ISBN:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                        <Label fx:id="isbnLabel" />
                    </HBox>
                    <!-- Short Description -->
                    <HBox spacing="10">
                        <Label text="Description:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                        <Label fx:id="descriptionLabel" maxWidth="400" wrapText="true" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
</AnchorPane>
