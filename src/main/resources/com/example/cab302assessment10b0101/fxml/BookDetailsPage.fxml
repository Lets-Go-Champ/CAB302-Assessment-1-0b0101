<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730" prefWidth="960" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302assessment10b0101.controllers.BookDetailsController">
    <VBox prefHeight="730.0" prefWidth="960.0" spacing="20" style="-fx-background-color: #F5F5F5;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <!-- Title -->
        <Label fx:id="mainTitle" style="-fx-font-size: 24px;" text="Book Title">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <HBox spacing="40.0">
            <Button mnemonicParsing="false" text="Edit" onAction="#handleEditBookButton">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" text="Delete" onAction="#handleDeleteButtonAction">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
        </HBox>

        <!-- Book Details -->
        <HBox prefHeight="463.0" prefWidth="920.0" spacing="20" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <!-- Cover Image -->
            <ImageView fx:id="bookCoverImage" fitHeight="487.0" fitWidth="362.0" preserveRatio="true" />

            <!-- Book Info -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <!-- Title -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Title:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="titleLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Author -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Author:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="authorLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Publication Date -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Publication Date:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="publicationDateLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- ISBN -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="ISBN:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="isbnLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Publisher -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Publisher:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="publisherLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Pages -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Pages:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="pagesLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Short Description -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Description:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="descriptionLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Notes -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Notes:">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                    <Label fx:id="notesLabel" wrapText="true" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="17.0" />
                  </font></Label>
                </HBox>

                <!-- Reading Status -->
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Reading Status:">
                        <font>
                            <Font size="17.0" />
                        </font></Label>
                    <Label fx:id="readingStatusLabel" wrapText="true" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="17.0" />
                        </font></Label>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
