<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="255.0" minWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles/changeUserDetails.css" fx:controller="com.example.cab302assessment10b0101.controllers.ChangeUsernameController">


    <Label layoutX="135.0" layoutY="14.0" prefHeight="12.0" text="Change Username" alignment="CENTER" styleClass="heading"> </Label>
    <Label layoutX="175.0" layoutY="73.0" prefHeight="8.0" text="New Username" alignment="CENTER" styleClass="sub_heading"> </Label>
    <TextField fx:id="newUsernameTextField" layoutX="135" layoutY="106.0" prefHeight="43.0" prefWidth="225" styleClass="sub_heading"/>

    <!-- Buttons -->
    <Button fx:id="updateButton" layoutX="135" layoutY="169" prefWidth="100" prefHeight="50" mnemonicParsing="false" text="Save" onAction="#handleUpdateUsername"/>
    <Button fx:id="cancelButton" layoutX="260" layoutY="169" prefWidth="100" prefHeight="50" mnemonicParsing="false" text="Cancel" onAction="#handleCancel"/>
</AnchorPane>
