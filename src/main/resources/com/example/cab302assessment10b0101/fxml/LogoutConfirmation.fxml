<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302assessment10b0101.controllers.BookDetailsController" spacing="10" padding="10">
    <VBox.margin>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </VBox.margin>
    <!-- Cover Image -->
    <ImageView fx:id="coverImageView" fitHeight="200.0" fitWidth="150.0" preserveRatio="true"/>

    <!-- Book Details -->
    <Label fx:id="titleLabel" text="Title: " font="Arial Bold 20"/>
    <Label fx:id="authorLabel" text="Author: " font="Arial 16"/>
    <Label fx:id="genreLabel" text="Genre: " font="Arial 14"/>
    <Label fx:id="pubDateLabel" text="Publication Date: " font="Arial 14"/>
    <Label fx:id="isbnLabel" text="ISBN: " font="Arial 14"/>
    <Label fx:id="descriptionLabel" text="Description: " font="Arial 14"/>
    <Label fx:id="notesLabel" text="Notes: " font="Arial 14"/>
</VBox>


