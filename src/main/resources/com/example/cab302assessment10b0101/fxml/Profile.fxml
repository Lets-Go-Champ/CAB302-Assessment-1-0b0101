<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/profile.css"
            fx:controller="com.example.cab302assessment10b0101.controllers.ProfileController" minHeight="730" minWidth="960">

    <!-- Headings -->
    <Label layoutX="49" layoutY="55" prefHeight="23" prefWidth="118" text="Username"> </Label>
    <Label layoutX="49" layoutY="143" prefHeight="23" prefWidth="118" text="Password"> </Label>

    <!-- Credential Fields -->
    <TextField fx:id="usernameTextField" editable="false" layoutX="49" layoutY="90" prefHeight="35" prefWidth="195"/>
    <TextField fx:id="passwordTextField" editable="false" layoutX="49" layoutY="178" prefHeight="35" prefWidth="195"/>

    <!-- Buttons -->
    <Button fx:id="changeUsernameButton" layoutX="248" layoutY="90" mnemonicParsing="false" text="Change" onAction="#handleUpdateUsername"/>
    <Button fx:id="changePasswordButton" layoutX="248" layoutY="178" mnemonicParsing="false" text="Change" onAction="#handleUpdatePassword"/>
</AnchorPane>
