<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/profile.css"
            fx:controller="com.example.cab302assessment10b0101.controllers.ProfileController" minHeight="730" minWidth="960">

    <!-- Title -->
    <Label layoutX="22" layoutY="15" text="Profile" styleClass="title"> </Label>
    <Line endX="832" endY="7.62939453125E-6" layoutX="122.0" layoutY="90" startX="-100" strokeWidth="2"/>

    <VBox layoutX="22" layoutY="150" prefHeight="365" prefWidth="242">

        <!-- Username -->
        <Label text="Username" styleClass="sub-heading"> </Label>
        <HBox minWidth="300">
            <TextField fx:id="usernameTextField" editable="false"> </TextField>
            <Button fx:id="changeUsernameButton" mnemonicParsing="false" text="Change" onAction="#handleUpdateUsername"/>
            <VBox.margin> <Insets bottom="20" /> </VBox.margin>
        </HBox>

        <!-- Password -->
        <Label text="Password" styleClass="sub-heading"> </Label>
        <HBox minWidth="300">
            <TextField fx:id="passwordTextField" editable="false"> </TextField>
            <Button fx:id="changePasswordButton" mnemonicParsing="false" text="Change" onAction="#handleUpdatePassword"/>
        </HBox>
    </VBox>
</AnchorPane>
